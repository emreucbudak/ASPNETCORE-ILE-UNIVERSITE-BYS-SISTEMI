@model List<WebApplication8.Models.StudentCourseSelections>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Derslerim</title>
    <!-- Tailwind CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-50">

    <div class="min-h-screen flex flex-col items-center p-6">
        <!-- Header -->
        <div class="bg-white shadow-lg rounded-lg p-6 w-full max-w-5xl mb-6">
            <h1 class="text-3xl font-semibold text-blue-800 text-center">Derslerim</h1>
        </div>

        <!-- Courses Table -->
        <div class="w-full max-w-5xl overflow-x-auto bg-white shadow-lg rounded-lg">
            <table class="min-w-full text-sm text-left text-gray-700">
                <thead class="bg-blue-600 text-white">
                    <tr>
                        <th class="py-3 px-6">#</th>
                        <th class="py-3 px-6">Student ID</th>
                        <th class="py-3 px-6">Course Name</th>
                    </tr>
                </thead>
                <tbody class="bg-white">
                    @if (Model != null && Model.Any())
                    {
                        int index = 1;
                        @foreach (var course in Model)
                        {
                            <tr class="border-b hover:bg-gray-100">
                                <td class="py-3 px-6">--></td>
                                <td class="py-3 px-6">@course.StudentID</td>
                                <td class="py-3 px-6">@course.Course.CourseName</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="py-3 px-6 text-center text-gray-500">No courses found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</body>
</html>
