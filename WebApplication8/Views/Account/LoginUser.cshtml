@model WebApplication8.Models.LoginViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f3f4f6;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .login-card {
            background: #fff;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 500px;
            width: 100%;
        }

            .login-card h2 {
                text-align: center;
                margin-bottom: 30px;
                font-size: 1.8rem;
            }

        .role-selection {
            display: flex;
            justify-content: center;
            gap: 30px;
            margin-bottom: 30px;
        }

            .role-selection label {
                cursor: pointer;
                text-align: center;
            }

            .role-selection img {
                width: 100px;
                height: 100px;
            }

            .role-selection input {
                display: none;
            }

            .role-selection label input:checked + img {
                border: 3px solid #007bff;
                border-radius: 50%;
            }

        .form-group {
            margin-bottom: 20px;
        }

        button {
            font-size: 1.2rem;
            padding: 12px;
        }
    </style>
</head>
<body>
    <div class="login-card">
        <h2>Login</h2>
        <form asp-action="LoginUser" asp-controller="Account" method="post">
            <div class="role-selection">
                <label>
                    <input name="Role" type="radio" value="Student" checked />
                    <img src="https://egitimgrafik.com/wp-content/uploads/2020/01/ogrencierkek.png" alt="Student" />
                    <div>Student</div>
                </label>
                <label>
                    <input name="Role" type="radio" value="Advisor" />
                    <img src="https://png.pngtree.com/png-vector/20240314/ourmid/pngtree-cartoon-of-thai-male-teacher-holding-a-stick-in-front-of-png-image_11960363.png" alt="Advisor" />
                    <div>Advisor</div>
                </label>
            </div>

            <div class="form-group">
                <label for="Username">Username</label>
                <input name="Username" class="form-control" id="Username" placeholder="Enter your username" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Password">Password</label>
                <input name="Password" type="password" class="form-control" id="Password" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">Login</button>


        </form>

        @if (ViewBag.Message != null)
        {
            <p style="color: red; text-align: center; margin-top: 10px;">@ViewBag.Message</p>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
